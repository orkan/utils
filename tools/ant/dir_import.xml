<?xml version="1.0" encoding="UTF-8"?>

<project name="dir_import" default="main" basedir=".">

	<target name="main">

		<echo>Mirror [SourceDir] to [TargetDir]</echo>
		<echo>SourceDir: ${SourceDir}</echo>
		<echo>TargetDir: ${TargetDir}</echo>
		<echo>Excludes : ${Excludes}</echo>
		<echo>Includes : ${Includes}</echo>

		<delete includeEmptyDirs="true" verbose="false">
			<!--
				Delete all files and subdirectories of [TargetDir]
				without:
					- [TargetDir] itself
					- default excludes, https://ant.apache.org/manual/dirtasks.html#defaultexcludes
			-->
			<fileset dir="${TargetDir}" defaultExcludes="true">
				<include name="**/*" />
			</fileset>
		</delete>

		<copy toDir="${TargetDir}" preserveLastModified="true" verbose="false">
			<fileset dir="${SourceDir}" defaultExcludes="false">

				<!-- Defaults -->
				<exclude name="
				.git,
				.git/**,
				**/*.bak,
				**/*.cache,
				cache/**,
				**/_cache/**,
				**/_coverage/**
				" />
				<include name="**/*" />

				<!-- User specs -->
				<exclude name="${Excludes}" />
				<include name="${Includes}" />

			</fileset>

		</copy>

	</target>

</project>
